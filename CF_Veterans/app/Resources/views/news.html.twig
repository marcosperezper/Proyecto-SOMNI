{% block js_extra %}

    function showNew(news, button){

        let newCollapsed = document.getElementById(news);
        let buttonEdit = document.getElementById(button);
            if(newCollapsed.style.display == 'none'){
                newCollapsed.style.display = '';
                buttonEdit.value= 'Ocultar';
            }else{
                newCollapsed.style.display = 'none';

                buttonEdit.value= 'Mostrar' ;
            }
    }

{% endblock %}

