{% extends  "base.html.twig" %}
{% block body %}
    <form action="" class="search">
        <a href="javascript" class="icon"></a>
        <input type="search" name="Search" id="search" placeholder="Search">

        <input id="submit" value="Enviar" type="submit">
        <label for="submit" class="submit"></label>
    </form>
<div class="categoria">
    <h2>Imagenes de jugadores</h2>
    <div class="carousel-wrapper">
        <div class="carousel" data-flickity style="">
              <div class="carousel-cell" style="">
                  {% for player in players %}
                  <img class="img" style="margin: auto; margin-right:auto;"
                   src="images/media/{{ player.name }}{{ player.lastname }}_media.png"/>
                  {% endfor %}
              </div>

        </div>
    </div>
</div>

{% endblock %}
{% block css_extra %}
    #submit{
    background-color: #BAF04F;
    margin-top: 40px;
    }
    .search{
    margin-left: 400px;
    }
    .categoria{
    margin-top: 50px;
    }
    .categoria2{
    margin-top: 30px;
    }
    .img{
    width: 300px;
    heith: 300px;
    }
    .flickity-page-dots{
    margin-left: -50px;
    }
    .flickity-slider{
