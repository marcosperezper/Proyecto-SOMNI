{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <form id="form" action="{{ path('login') }}" method="post">
            <div class="row">
                <div class="col-md-6">
                    <label for="username">Username:</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}"/>
                </div>
                <div class="col-md-6">
                    <label style="text-align: center" for="password">Password:</label>
                    <input type="password" id="password" name="_password"/>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 mx-auto text-center center-block ">
                    <button class="btn btn-lg btn-primary btn-block text-uppercase" style="width: 87.5%; " id="login"
                            type="submit">Iniciar Sesi√≥n
                    </button>
                </div>
            </div>
        </form>
    </div>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

