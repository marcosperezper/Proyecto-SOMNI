{% extends  "base.html.twig" %}


{% block scripts_extra %}
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
{% endblock %}

{% block body %}

    <h1 style="text-align:center; padding-top:5%;"> MONTSERRAT CF VETERANS</h1>

    <div class="col-md-12 col-sm-12">
        <div class="carousel-wrapper">
            <div class="carousel" data-flickity>
                <div class="carousel-cell">
                    <img class="img_carousel" style="margin: auto"
                         src="{{ asset('/images/cf_veterans_bench.jpg') }}"/>
                </div>
                <div class="carousel-cell">
                    <img class="img_carousel" style="margin: auto"
                         src="{{ asset('/images/cf_veterans_gameplay.jpg') }}"/>
                </div>
                <div class="carousel-cell">
                    <img class="img_carousel" style="margin: auto"
                         src="{{ asset('/images/cf_veterans_team.jpg') }}"/>
                </div>
            </div>
        </div>
    </div>

    <p>
        Club de fútbol de veteranos de Montserrat.
        El equipo es creado con el objetivo de juntar a los amantes del fútbol de pueblo y pasarlo bien disfrutando del
        fútbol.
        Este portal ha sido creado con la intencion de administrar y mejorar el manejo de datos referente al equipo.

    </p>

{% endblock %}

{% block css_extra %}
    <style>
        .carousel-inner > .item > img {
            margin: 0 auto;
            max-width: max-content;
        }
        p{
            font-size:2rem;
            margin-top: 3rem;
        }
    </style>
{% endblock %}
